@model Repositories.Models.Member

@{
    ViewData["Title"] = "Login Page";
}

<div class="d-flex justify-content-center align-items-center" style="height: 50vh;">
    <form method="post" class="col-md-4">
        <div class="form-group">
            <label class="control-label">Email:</label>
            <input name="email" class="form-control" asp-for="Email" />
        </div>

        <div class="form-group">
            <label class="control-label">Password:</label>
            <input name="password" class="form-control" asp-for="Password" />
        </div>

        <span class="text-danger">@TempData["error"]</span>

        <div class="form-group mt-3 d-flex justify-content-center align-items-center">
            <input type="submit" value="Login" class="btn btn-primary" />
        </div>
    </form>
</div>