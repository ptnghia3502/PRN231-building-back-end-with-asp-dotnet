@model ShoppingCart

<h2>Shopping Cart</h2>

<p>
    <a asp-action="Index">Continue shopping</a>
</p>

<p>
    <a asp-action="CreateOrder">Create order</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>@item.Product.ProductId</td>
                <td>@item.Product.ProductName</td>
                <td>@item.Product.UnitPrice</td>
                <td>
                    <form asp-controller="Shopping" asp-action="UpdateQuantity" method="post">
                        <input type="hidden" name="productId" value="@item.Product.ProductId" />
                        <input type="number" name="quantity" value="@item.Quantity" />
                        <button type="submit">Update</button>
                    </form>
                </td>
                <td>
                    <form asp-controller="Shopping" asp-action="RemoveFromCart" method="post">
                        <input type="hidden" name="productId" value="@item.Product.ProductId" />
                        <button type="submit">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
